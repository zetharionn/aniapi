{
	"root": true,
	"env": {
		"es2023": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"settings": {
		"import/resolver": {
			"typescript": {
				"alwaysTryTypes": true
			}
		}
	},
	"ignorePatterns": ["dist", ".eslintrc.json"],
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"import/order": 0
	}
}
